    <script>
        // Tambahkan elemen floating untuk efek seram
        const floatingElements = document.getElementById('floatingElements');
        const symbols = ['👹', '💀', '🩸', '🔥', '☠️', '📱', '🔪', '⚰️', '👻', '💣'];
        
        for (let i = 0; i < 20; i++) {
            const element = document.createElement('div');
            element.className = 'floating-element';
            element.textContent = symbols[Math.floor(Math.random() * symbols.length)];
            element.style.left = Math.random() * 100 + 'vw';
            element.style.animationDuration = (Math.random() * 20 + 10) + 's';
            element.style.animationDelay = Math.random() * 5 + 's';
            floatingElements.appendChild(element);
        }
        
        // Data untuk metode unban
        const methods = {
            met1: {
                title: "[MET 1 UNBAN FRESH]",
                emailTo: "support@support.whatsapp.com",
                subject: "新的 WhatsApp 用戶帳號申訴提交",
                message: `مرحبا فريق دعم واتساب
انا رجل ابلغ من العمر ٦٠ سنه وكنت استخدم واتساب منذ عام 2009 واعرف طريقة الاستخدام والشروط الازمه لواتساب جيدا كنت استعمل واتساب طول حياتي في العمل والتواصل مع عملائي ولكن منذ ايام لاحظت أنه تم حظر حسابي بشكل غير مفهوم وغير اائق بالنسبه لشخص يستخدم واتساب بشكل طبيعي ودون اي انتهاك لذلك اطالب وارفع قضيه عليكم لرفع الحظر عن حسابي ورقم حسابي هو +20 عليكم مساعدتي بشكل سريع`
            },
            met2: {
                title: "[MET 2 PERMA×LUMUT]",
                emailTo: "help_new@support.whatsapp.com, faq_sp@support.whatsapp.com, support@support.whatsapp.com",
                subject: "Bonjour WhatsApp, nous souhaitons restaurer WhatsApp qui a été bloqué sans raison",
                message: `Bonjour support WhatsApp, nous 
utilisons l'application WhatsApp que nous aimons, ici nous voulons demander la récupération du compte WhatsApp qui a été bloqué par des personnes qui ne connaissent aucune honte, ce qui m'empêche d'utiliser mon compte WhatsApp car il a été bloqué, à cause de cela mes activités sur WhatsApp ont été arrêtées en raison du blocage. Veuillez aider à récupérer le numéro de compte WhatsApp : +62xxx, j'espère que WhatsApp pourra bien répondre à ce que je vous ai dit, merci pour votre service WhatsApp`
            }
        };
        
        // Elemen DOM
        const methodSelect = document.getElementById('methodSelect');
        const unbanBtn = document.getElementById('unbanBtn');
        const methodModal = document.getElementById('methodModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalBody = document.getElementById('modalBody');
        const closeModal = document.getElementById('closeModal');
        const whatsappNumber = document.getElementById('whatsappNumber');
        
        // Fungsi untuk membuka modal dengan detail metode
        function openMethodModal(methodKey) {
            const method = methods[methodKey];
            modalTitle.textContent = method.title;
            
            // Ganti placeholder dengan nomor WhatsApp yang dimasukkan
            let message = method.message;
            if (whatsappNumber.value.trim()) {
                message = message.replace(/\+20|\+62xxx/g, whatsappNumber.value.trim());
            }
            
            modalBody.innerHTML = `
                <p>Metode ini akan membuka aplikasi email dengan detail berikut:</p>
                <div class="email-details">
                    <div class="email-field">
                        <strong>Kepada:</strong> ${method.emailTo}
                    </div>
                    <div class="email-field">
                        <strong>Subjek:</strong> ${method.subject}
                    </div>
                    <div class="email-field">
                        <strong>Pesan:</strong><br>
                        <pre style="white-space: pre-wrap; margin-top: 5px;">${message}</pre>
                    </div>
                </div>
                <p style="margin-top: 15px;">Klik tombol di bawah untuk membuka aplikasi email dengan detail ini.</p>
                <button class="unban-button" style="margin-top: 15px;" id="sendEmailBtn">Buka Aplikasi Email</button>
            `;
            
            // Tambahkan event listener untuk tombol email
            document.getElementById('sendEmailBtn').addEventListener('click', function() {
                const emailBody = encodeURIComponent(message);
                const emailSubject = encodeURIComponent(method.subject);
                window.location.href = `mailto:${method.emailTo}?subject=${emailSubject}&body=${emailBody}`;
            });
            
            methodModal.style.display = 'flex';
        }
        
        // Event listener untuk tombol UNBAN
        unbanBtn.addEventListener('click', function() {
            const selectedMethod = methodSelect.value;
            
            // Validasi nomor WhatsApp
            if (!whatsappNumber.value.trim()) {
                alert('Masukkan nomor WhatsApp terlebih dahulu!');
                return;
            }
            
            // Buka modal dengan detail metode
            openMethodModal(selectedMethod);
        });
        
        // Event listener untuk menutup modal
        closeModal.addEventListener('click', function() {
            methodModal.style.display = 'none';
        });
        
        // Tutup modal jika klik di luar konten modal
        window.addEventListener('click', function(event) {
            if (event.target === methodModal) {
                methodModal.style.display = 'none';
            }
        });
    </script>
