        // Elemen DOM
        const methodSelect = document.getElementById('methodSelect');
        const unbanBtn = document.getElementById('unbanBtn');
        const methodModal = document.getElementById('methodModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalBody = document.getElementById('modalBody');
        const closeModal = document.getElementById('closeModal');
        const whatsappNumber = document.getElementById('whatsappNumber');
        
        // Fungsi untuk membuka modal dengan detail metode
        function openMethodModal(methodKey) {
            const method = methods[methodKey];
            modalTitle.textContent = method.title;
            
            // Ganti placeholder dengan nomor WhatsApp yang dimasukkan
            let message = method.message;
            if (whatsappNumber.value.trim()) {
                message = message.replace(/\+20|\+62xxx/g, whatsappNumber.value.trim());
            }
            
            modalBody.innerHTML = `
                <p>Metode ini akan membuka aplikasi email dengan detail berikut:</p>
                <div class="email-details">
                    <div class="email-field">
                        <strong>Kepada:</strong> ${method.emailTo}
                    </div>
                    <div class="email-field">
                        <strong>Subjek:</strong> ${method.subject}
                    </div>
                    <div class="email-field">
                        <strong>Pesan:</strong><br>
                        <pre style="white-space: pre-wrap; margin-top: 5px;">${message}</pre>
                    </div>
                </div>
                <p style="margin-top: 15px;">Klik tombol di bawah untuk membuka aplikasi email dengan detail ini.</p>
                <button class="unban-button" style="margin-top: 15px;" id="sendEmailBtn">Buka Aplikasi Email</button>
            `;
            
            // Tambahkan event listener untuk tombol email
            document.getElementById('sendEmailBtn').addEventListener('click', function() {
                const emailBody = encodeURIComponent(message);
                const emailSubject = encodeURIComponent(method.subject);
                window.location.href = `mailto:${method.emailTo}?subject=${emailSubject}&body=${emailBody}`;
            });
            
            methodModal.style.display = 'flex';
        }
        
        // Event listener untuk tombol UNBAN
        unbanBtn.addEventListener('click', function() {
            const selectedMethod = methodSelect.value;
            
            // Validasi nomor WhatsApp
            if (!whatsappNumber.value.trim()) {
                alert('Masukkan nomor WhatsApp terlebih dahulu!');
                return;
            }
            
            // Buka modal dengan detail metode
            openMethodModal(selectedMethod);
        });
        
        // Event listener untuk menutup modal
        closeModal.addEventListener('click', function() {
            methodModal.style.display = 'none';
        });
        
        // Tutup modal jika klik di luar konten modal
        window.addEventListener('click', function(event) {
            if (event.target === methodModal) {
                methodModal.style.display = 'none';
            }
        });
    </script>
